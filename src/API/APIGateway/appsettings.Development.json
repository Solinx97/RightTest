{
  "ReverseProxy": {
    "Routes": {
      "userServiceRoute": {
        "ClusterId": "userServiceCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/users" }
        ]
      },
      "financesServiceRoute": {
        "ClusterId": "financesServiceCluster",
        "Match": {
          "Path": "/finances/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/finances" }
        ]
      }
    },
    "Clusters": {
      "userServiceCluster": {
        "Destinations": {
          "userService": {
            "Address": "https://localhost:5157/"
          }
        }
      },
      "financesServiceCluster": {
        "Destinations": {
          "financesService": {
            "Address": "https://localhost:5096/"
          }
        }
      }
    }
  },
  "ConnectionStrings": {
    "FinancesConnection": "",
    "UsersConnection": ""
  },
  "JWT": {
    "Key": ""
  },
  "Authentication": {
    "Issuer": "",
    "Authority": "",
    "Client": {
      "Audiences": "",
      "Scopes": ""
    }
  }
}
