{
  "ReverseProxy": {
    "Routes": {
      "userServiceRoute": {
        "ClusterId": "userServiceCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/users" }
        ]
      },
      "financesServiceRoute": {
        "ClusterId": "financesServiceCluster",
        "Match": {
          "Path": "/finances/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/finances" }
        ]
      }
    },
    "Clusters": {
      "userServiceCluster": {
        "Destinations": {
          "userService": {
            "Address": "https://localhost:7189/"
          }
        }
      },
      "financesServiceCluster": {
        "Destinations": {
          "financesService": {
            "Address": "https://localhost:7129/"
          }
        }
      }
    }
  }
}
